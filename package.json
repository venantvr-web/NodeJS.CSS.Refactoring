{
  "name": "css-intelligence-platform",
  "version": "0.1.0",
  "description": "CSS analysis and regression prevention tool with multi-page confidence scoring and visual regression detection",
  "main": "dist/index.js",
  "bin": {
    "css-audit": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "css",
    "analysis",
    "audit",
    "refactoring",
    "visual-regression",
    "testing",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.18",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "chalk": "^5.6.2",
    "cheerio": "^1.2.0",
    "colorjs.io": "^0.6.1",
    "commander": "^14.0.3",
    "cors": "^2.8.6",
    "cosmiconfig": "^9.0.0",
    "css-tree": "^3.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "glob": "^13.0.1",
    "lowdb": "^7.0.1",
    "ora": "^9.3.0",
    "p-queue": "^9.1.0",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.58.1",
    "postcss": "^8.5.6",
    "postcss-scss": "^4.0.9",
    "socket.io": "^4.8.3",
    "specificity": "^1.0.0",
    "winston": "^3.19.0",
    "zod": "^4.3.6"
  }
}
